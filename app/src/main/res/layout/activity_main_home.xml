<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainHome">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03"
        android:id="@+id/hguide1"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vguide1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.045"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vguide2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.955"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hguide2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.97"
        android:orientation="horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/tvhello"
        android:text="Hello!ðŸ‘‹"
        android:textSize="30sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/hguide1"
        app:layout_constraintStart_toEndOf="@+id/vguide1"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvhello"
            app:layout_constraintStart_toStartOf="@+id/vguide1"
            app:cardCornerRadius="30dp">
            <Button
                android:id="@+id/btn_Inprogress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="In Progress"
                android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_Completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/card_progress"
            app:layout_constraintTop_toBottomOf="@+id/tvhello"
            app:cardCornerRadius="30dp">
            <Button
                android:id="@+id/btn_completed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="Completed"
                android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/card_progress"
        app:layout_constraintStart_toStartOf="@+id/vguide1"
        app:layout_constraintBottom_toTopOf="@+id/hguide2"
        app:layout_constraintEnd_toEndOf="@+id/vguide2"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_Addtask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintEnd_toStartOf="@+id/vguide2"
        app:layout_constraintBottom_toTopOf="@+id/hguide2"/>

</androidx.constraintlayout.widget.ConstraintLayout>