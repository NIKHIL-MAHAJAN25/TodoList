<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Subtaskview">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03"
        android:id="@+id/hguide1"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vguide1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.045"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vguide2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.955"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hguide2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.97"
        android:orientation="horizontal"/>
    <TextView
        android:id="@+id/tvsubtasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sub Tasks"
        app:layout_constraintTop_toBottomOf="@+id/hguide1"
        app:layout_constraintStart_toStartOf="@+id/vguide1"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Recycler1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvsubtasks"
        app:layout_constraintStart_toStartOf="@+id/vguide1"
        app:layout_constraintBottom_toTopOf="@+id/hguide2"
        app:layout_constraintEnd_toEndOf="@+id/vguide2"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_Addtask2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintEnd_toStartOf="@+id/vguide2"
        app:layout_constraintBottom_toTopOf="@+id/hguide2"/>
</androidx.constraintlayout.widget.ConstraintLayout>